<FlatButton@ButtonBehavior+Label>
    text: "default"

<ScreenManagement>:
    AdminScreen:
        name: "admin_screen"

<AdminScreen>:
    BoxLayout:
        id: admin_screen
        orientation: "vertical"

        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            id: top_nav
            size_hint_y: None
            height: 30

            canvas.before:
                Color:
                    rgba: 0.4, 0.5, 0.6, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            FlatButton:
                id: file_trigger
                text: "File"
                on_release:
                    file_dropdown.open(self)
                size_hint: 0.1, None
                height: 30

                Widget:
                    on_parent: file_dropdown.dismiss()

                    DropDown:
                        id: file_dropdown
                        Button:
                            id: close_button
                            text: "Quit"
                            size_hint_y: None
                            height: 30

            Label:
                text: "Admin Dashboard"
                bold: True
                size_hint: 0.9, None
                height: 30

        BoxLayout:
            id: content_nav

            BoxLayout:
                id: nav_tab
                size_hint_x: 0.2
                orientation: "vertical"
                spacing: 3
                padding: 2

                canvas.before:
                    Color:
                        rgba: 0.4, 0.45, 0.55, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                ToggleButton:
                    id: user_toggle
                    text: "Manage Users"
                    size_hint_y: 0.1
                    state: "down"
                    background_color: 0.4, 0.55, 0.65, 1
                    background_normal: ""

                ToggleButton:
                    id: products_toggle
                    text: "Manage Products"
                    size_hint_y: 0.1
                    background_color: 0.4, 0.55, 0.65, 1
                    background_normal: ""

                ToggleButton:
                    id: analysis_toggle
                    text: "Product Analysis"
                    size_hint_y: 0.1
                    background_color: 0.4, 0.55, 0.65, 1
                    background_normal: ""

                Label:
                    id: sp
                    text: ""
                    size_hint_y: 0.7

            BoxLayout:
                id: content
                size_hint_x: 0.8
















